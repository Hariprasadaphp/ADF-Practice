										},
										"sink": {
											"name": "Hard disk size",
											"type": "String"
										}
									},
									{
										"source": {
											"path": "$['body']['data']['year']"
										},
										"sink": {
											"name": "year",
											"type": "String"
										}
									},
									{
										"source": {
											"path": "$['body']['data']['Case Size']"
										},
										"sink": {
											"name": "Case Size",
											"type": "String"
										}
									},
									{
										"source": {
											"path": "$['body']['data']['Strap Colour']"
										},
										"sink": {
											"name": "Strap Colour",
											"type": "String"
										}
									},
									{
										"source": {
											"path": "$['body']['data']['Color']"
										},
										"sink": {
											"name": "Color",
											"type": "String"
										}
									},
									{
										"source": {
											"path": "$['body']['data']['Description']"
										},
										"sink": {
											"name": "Description",
											"type": "String"
										}
									},
									{
										"source": {
											"path": "$['body']['data']['Capacity']"
										},
										"sink": {
											"name": "Capacity",
											"type": "String"
										}
									},
									{
										"source": {
											"path": "$['body']['data']['Screen size']"
										},
										"sink": {
											"name": "Screen size",
											"type": "String"
