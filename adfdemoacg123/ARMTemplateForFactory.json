										"source": {
											"path": "$['headers']['Server']"
										},
										"sink": {
											"name": "Server",
											"type": "String"
										}
									},
									{
										"source": {
											"path": "$['headers']['Connection']"
										},
										"sink": {
											"name": "Connection",
											"type": "String"
										}
									},
									{
										"source": {
											"path": "$['headers']['CF-Cache-Status']"
										},
										"sink": {
											"name": "CF-Cache-Status",
											"type": "String"
										}
									},
									{
										"source": {
											"path": "$['headers']['alt-svc']"
										},
										"sink": {
											"name": "alt-svc",
											"type": "String"
										}
									}
								]
							}
						},
						"inputs": [
							{
								"referenceName": "Json1",
								"type": "DatasetReference",
								"parameters": {}
							}
						],
						"outputs": [
